<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_parent_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.example.pavelhryts.notesviewer.util.views.CheckableCardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="5dp"
        android:layout_margin="16dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:focusable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/list_item_text"
                style="@style/listItem"/>

            <TextView
                android:id="@+id/list_item_message"
                style="@style/listItemBody"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/list_text_button"
                style="@style/listItemButton"
                android:contentDescription="@string/show_message"
                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                android:layout_gravity="center"/>

        </LinearLayout>
    </com.example.pavelhryts.notesviewer.util.views.CheckableCardView>

</LinearLayout>